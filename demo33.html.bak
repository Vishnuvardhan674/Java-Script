function sum(){
print("sum()")
var sum=0;
for(var i=0;i<arguments.length;i++){
sum+=arguments[i];
}
return sum;
} 
 
var a1=sum();
print(a1);
 
var a2=sum(10,20);
print(a2);
 
var a3=sum(10,20,30,40);
